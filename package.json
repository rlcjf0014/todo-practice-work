{
  "name": "todo-practice-work",
  "version": "1.0.0",
  "description": "Practice typescript-rest through a simple ToDo application",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "build": "npm run clean && tsc && npm run swagger",
    "clean": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "swagger": "swaggerGen -c ./swagger.config.yml",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "test": "jest --detectOpenHandles --forceExit --maxWorkers=10",
    "testWatch": "jest --watchAll",
    "testCoverage": "jest --coverage --detectOpenHandles --forceExit --maxWorkers=10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlcjf0014/todo-practice-work.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rlcjf0014/todo-practice-work/issues"
  },
  "homepage": "https://github.com/rlcjf0014/todo-practice-work#readme",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "dependencies": {
    "@types/bluebird": "^3.5.30",
    "@types/validator": "^12.0.1",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jest": "^25.2.3",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.3.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "sequelize": "^5.21.5",
    "sequelize-typescript": "^1.1.0",
    "strong-error-handler": "^3.4.0",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.1.4",
    "tslib": "^1.11.1",
    "typescript-ioc": "^3.2.1",
    "typescript-rest": "^3.0.1",
    "typescript-rest-swagger": "^1.1.1",
    "util": "^0.12.2"
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/request": "^2.48.4",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "jest-dev-server": "^4.4.0",
    "sequelize-cli": "^5.5.1",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.8.1"
  }
}
